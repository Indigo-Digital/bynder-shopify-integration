# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app-url.com
SCOPES=write_products,read_files,write_files

# Optional: Custom shop domain
# SHOP_CUSTOM_DOMAIN=your-custom-domain.com

# Bynder OAuth Configuration
BYNDER_CLIENT_ID=your_bynder_client_id
BYNDER_CLIENT_SECRET=your_bynder_client_secret

# Database Configuration
# For SQLite (development), this is handled by Prisma schema
# For production, set DATABASE_URL to your database connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Node Environment
NODE_ENV=development
