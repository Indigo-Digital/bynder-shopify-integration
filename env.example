# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app-url.com
SCOPES=write_products,read_files,write_files

# Optional: Custom shop domain
# SHOP_CUSTOM_DOMAIN=your-custom-domain.com

# Bynder Configuration
# Permanent token for API access (required)
# Generate in Bynder portal: Settings > Advanced Settings > Portal Settings > Permanent Tokens
BYNDER_PERMANENT_TOKEN=your_bynder_permanent_token

# Optional: OAuth credentials (not needed if using permanent token)
BYNDER_CLIENT_ID=your_bynder_client_id
BYNDER_CLIENT_SECRET=your_bynder_client_secret

# Optional: Webhook security
# BYNDER_WEBHOOK_SECRET=your_webhook_secret_for_signature_verification
# BYNDER_WEBHOOK_VERIFY_SIGNATURES=true

# Rate Limiting
BYNDER_RATE_LIMIT_RPS=10          # Requests per second
BYNDER_RATE_LIMIT_BURST=20        # Burst capacity

# Parallel Processing
SYNC_CONCURRENCY_LIMIT=5          # Concurrent asset processing

# Metrics & Observability
METRICS_RETENTION_DAYS=30         # Days to keep metrics
ENABLE_METRICS=true               # Enable metrics collection

# AI Alt Text Generation (Google Gemini Vision)
# Option 1: Use Gemini API key (simpler setup)
# GEMINI_API_KEY=your_gemini_api_key

# Option 2: Use Google Cloud service account (recommended for production)
# Set the full JSON content of your service account key file
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}
# GOOGLE_CLOUD_LOCATION=us-central1  # Optional, defaults to us-central1

# Database Configuration
# For local development (SQLite):
# DATABASE_URL=file:./dev.sqlite
# For production (PostgreSQL on Fly.io), use your managed Postgres instance:
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# Node Environment
NODE_ENV=development
