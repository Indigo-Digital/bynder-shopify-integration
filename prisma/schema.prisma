// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  // For local dev: DATABASE_URL=file:./dev.sqlite
  // For production: Switch to schema.postgresql.prisma before deploying
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                String   @id @default(cuid())
  shop              String   @unique
  bynderBaseUrl     String?
  syncTags          String   @default("shopify-sync")
  fileFolderTemplate String? // Template for folder path (e.g., "bynder/{tag}/{dateCreated:YYYY}")
  filenamePrefix    String? // Prefix for filenames (e.g., "[Bynder]", "BYNDER_")
  filenameSuffix    String? // Suffix for filenames (e.g., "_bynder")
  altTextPrefix     String? // Prefix for alt text (e.g., "[Bynder]")
  enableAutoAltText Boolean  @default(false) // Enable AI-generated alt text using Google Gemini Vision
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  syncedAssets      SyncedAsset[]
  webhookSubscriptions WebhookSubscription[]
  webhookEvents     WebhookEvent[]
  syncJobs          SyncJob[]
  syncMetrics       SyncMetrics[]
}

model SyncedAsset {
  id              String   @id @default(cuid())
  shopId          String
  bynderAssetId   String
  shopifyFileId   String
  syncType        String
  bynderTags      String?
  bynderVersion   Int?
  syncedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt

  shop            Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, bynderAssetId])
  @@index([shopId])
  @@index([bynderAssetId])
}

model WebhookSubscription {
  id          String   @id @default(cuid())
  shopId      String
  bynderWebhookId String
  eventType   String
  endpoint    String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, bynderWebhookId])
}

model SyncJob {
  id          String   @id @default(cuid())
  shopId      String
  status      String
  startedAt   DateTime?
  completedAt DateTime?
  error       String?
  errors      String?  // JSON array of { assetId, error } objects
  assetsProcessed Int   @default(0)
  assetsCreated   Int   @default(0)
  assetsUpdated   Int   @default(0)
  createdAt   DateTime @default(now())

  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId, status])
}

model WebhookEvent {
  id          String   @id @default(cuid())
  shopId      String
  eventType   String
  assetId     String?
  status      String   // "success" or "failed"
  payload     String   // JSON string of full webhook payload
  error       String?
  processedAt DateTime?
  createdAt   DateTime @default(now())

  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([status])
  @@index([createdAt])
}

model SyncMetrics {
  id            String   @id @default(cuid())
  shopId        String
  syncJobId     String?  // Optional link to specific job
  metricType    String   // "api_call", "sync_duration", "throughput", "error_rate"
  metricName    String   // "bynder_api_calls", "shopify_api_calls", "assets_per_second", etc.
  value         Float
  metadata      String?  // JSON string for additional context
  recordedAt    DateTime @default(now())
  
  shop          Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  
  @@index([shopId, recordedAt])
  @@index([syncJobId])
}