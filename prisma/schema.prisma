// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                String   @id @default(cuid())
  shop              String   @unique
  bynderAccessToken String?
  bynderRefreshToken String?
  bynderTokenExpires DateTime?
  bynderBaseUrl     String?
  syncTags          String   @default("shopify-sync")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  syncedAssets      SyncedAsset[]
  webhookSubscriptions WebhookSubscription[]
  syncJobs          SyncJob[]
}

model SyncedAsset {
  id              String   @id @default(cuid())
  shopId          String
  bynderAssetId   String
  shopifyFileId   String
  syncType        String
  bynderTags      String?
  bynderVersion   Int?
  syncedAt        DateTime @default(now())
  updatedAt       DateTime @updatedAt

  shop            Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, bynderAssetId])
  @@index([shopId])
  @@index([bynderAssetId])
}

model WebhookSubscription {
  id          String   @id @default(cuid())
  shopId      String
  bynderWebhookId String
  eventType   String
  endpoint    String
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([shopId, bynderWebhookId])
}

model SyncJob {
  id          String   @id @default(cuid())
  shopId      String
  status      String
  startedAt   DateTime?
  completedAt DateTime?
  error       String?
  assetsProcessed Int   @default(0)
  createdAt   DateTime @default(now())

  shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId, status])
}